extends layout

block content
  .page-header
    h3 iNOS gegevens

  form.form-horizontal(method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group
      label(class='col-sm-2 control-label', for='title') Verhaalnaam
      .col-sm-8
        input.form-control(type='text', name='title', id='title', autofocus=true)
    .form-group
      label(class='col-sm-2 control-label', for='id') Verhaal-id
      .col-sm-8
        input.form-control(type='text', name='id', id='id')
    .form-group
      .col-sm-offset-2.col-sm-8
        button.btn.btn-primary(type='submit')
          i.fa.fa-envelope
          | Send
